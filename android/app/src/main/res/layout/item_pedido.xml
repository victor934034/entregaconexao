<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.App.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_medium"
    android:layout_marginVertical="6dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Top Header: ID + Status -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvNumeroPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID #00000"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="PENDENTE"
                android:background="@drawable/bg_status_badge"
                android:textColor="@color/status_pending_text"
                android:textSize="11sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAllCaps="true" />
        </RelativeLayout>

        <!-- Customer Name -->
        <TextView
            android:id="@+id/tvCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Cliente"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:fontFamily="sans-serif-bold"
            android:layout_marginBottom="16dp"/>

        <!-- Middle Info: Valor Total + Itens -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor Total"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvValorTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 0,00"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?attr/colorOutlineVariant"
                android:layout_marginHorizontal="24dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Itens"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvItensCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="00 itens"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Specific: Delivery/Scheduling Info if available -->
        <LinearLayout
            android:id="@+id/layoutAgendamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:background="@drawable/bg_warning_light"
            android:backgroundTint="?attr/colorPrimaryContainer"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_agenda"
                app:tint="?attr/colorPrimary"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvAgendamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrega agendada para: 00/00/0000"
                android:textColor="?attr/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAcao"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1.2"
                android:text="Aceitar Pedido"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="12dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="?attr/colorPrimary"
                android:layout_marginEnd="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerDetalhes"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Ver Detalhes"
                android:textAllCaps="false"
                android:textColor="?attr/colorOnSurface"
                app:cornerRadius="12dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
