<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/android:windowBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Detalhes do Pedido"
            app:titleCentered="true"
            app:titleTextColor="?attr/colorOnSurface"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="?attr/colorOnSurface" />
            
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_medium">

                <!-- Status Timeline Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutlineVariant"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:id="@+id/llHistorico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Scheduled Delivery Section (NEW) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAgendamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutlineVariant"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_agenda"
                            app:tint="?attr/colorPrimary"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Entrega Programada"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvAgendamentoInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Data e Hora"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-bold" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Customer Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutlineVariant"
                    android:layout_marginBottom="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/tvClienteLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cliente"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvClienteDetalhe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvClienteLabel"
                            android:layout_marginTop="4dp"
                            android:text="Nome do Cliente"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnChat"
                                style="@style/Widget.Material3.Button.TonalButton"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:insetLeft="0dp"
                                android:insetTop="0dp"
                                android:insetRight="0dp"
                                android:insetBottom="0dp"
                                app:icon="@drawable/ic_chat"
                                app:iconGravity="textStart"
                                app:iconPadding="0dp"
                                app:iconTint="?attr/colorPrimary"
                                app:cornerRadius="24dp"
                                android:layout_marginEnd="8dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnCall"
                                style="@style/Widget.Material3.Button.TonalButton"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:insetLeft="0dp"
                                android:insetTop="0dp"
                                android:insetRight="0dp"
                                android:insetBottom="0dp"
                                app:icon="@drawable/ic_call"
                                app:iconGravity="textStart"
                                app:iconPadding="0dp"
                                app:iconTint="?attr/colorPrimary"
                                app:cornerRadius="24dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Address Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutlineVariant"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tvEnderecoLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Endereço de Entrega"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/btnAbrirMapa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="Abrir no Mapa"
                                android:textColor="?attr/colorPrimary"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvEnderecoDetalhe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Rua, 123 - Bairro, Cidade"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                        <!-- Observação / Aviso -->
                        <LinearLayout
                            android:id="@+id/llAvisoEndereco"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:padding="12dp"
                            android:background="@drawable/bg_warning_light"
                            android:gravity="center_vertical"
                            android:visibility="gone">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_error"
                                app:tint="?attr/colorWarningText"
                                android:layout_marginEnd="12dp"/>
                            <TextView
                                android:id="@+id/tvAvisoEndereco"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Aviso: Perto da padaria..."
                                android:textColor="?attr/colorWarningText"
                                android:textSize="13sp"
                                android:fontFamily="sans-serif-bold" />
                        </LinearLayout>

                        <!-- Map Placeholder -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/mapCard"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="16dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:backgroundTint="?attr/colorOnPrimary">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_map"
                                android:alpha="0.2"
                                app:tint="?attr/colorPrimary" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Visualização do Mapa"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="12sp" />
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Order Summary Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutlineVariant"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Resumo do Pedido"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif-bold" />
                            <TextView
                                android:id="@+id/tvTotalItens"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="0 itens"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="13sp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/llProdutos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?attr/colorOutlineVariant"
                            android:layout_marginVertical="16dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Subtotal"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="14sp" />
                            <TextView
                                android:id="@+id/tvSubtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="R$ 0,00"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-bold" />
                            <TextView
                                android:id="@+id/tvTotalDetalhe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="R$ 0,00"
                                android:textColor="?attr/colorPrimary"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-bold" />
                        </RelativeLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Bottom Actions Bar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            app:cardCornerRadius="0dp"
            app:cardElevation="16dp"
            app:backgroundTint="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReportError"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:text="Relatar Erro"
                    app:icon="@drawable/ic_error"
                    app:iconTint="#E53935"
                    app:strokeColor="?attr/colorOutline"
                    app:cornerRadius="12dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:paddingHorizontal="12dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="14sp"
                    android:textColor="#E53935"
                    android:textAllCaps="false" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSairPedido"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="0.4"
                    android:text="Sair"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSurface"
                    app:cornerRadius="12dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:strokeColor="@color/input_border"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUpdateStatus"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="0.6"
                    android:text="Aceitar Pedido"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:cornerRadius="12dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:backgroundTint="@color/primary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>
</LinearLayout>
