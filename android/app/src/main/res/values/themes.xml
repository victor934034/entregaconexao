<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppDeNetregasConexao2772" parent="Theme.Material3.Light.NoActionBar">
        <!-- Brand Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorTertiary">@color/primary_light</item>
        
        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        
        <!-- Typography Color -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="colorOutlineVariant">@color/input_border</item>
        <item name="colorOutline">@color/input_border</item>
        
        <!-- Font styling -->
        <!-- Assume standard sans-serif for modern look -->
        <item name="android:fontFamily">sans-serif-medium</item>
        
        <!-- System bar styling -->
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/surface_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>

        <!-- Custom Warning Colors -->
        <item name="colorWarningBackground">@color/warning_bg_light</item>
        <item name="colorWarningStroke">@color/warning_stroke_light</item>
        <item name="colorWarningText">@color/warning_text_light</item>
    </style>

    <style name="Theme.AppDeNetregasConexao2772" parent="Base.Theme.AppDeNetregasConexao2772" />

    <!-- Button styling -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    
    <!-- Input Fields styling -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxBackgroundColor">@color/input_bg</item>
    </style>
    
    <!-- Material Card styling -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeWidth">0dp</item>
    </style>
</resources>